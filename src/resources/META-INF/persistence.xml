<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence                  
                                http://java.sun.com/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="jcurrency-persistance-unit">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<!-- <jta-data-source>java:/DefaultDS</jta-data-source> -->
 		<!-- <mapping-file>ormap.xml</mapping-file>
		<jar-file>JCurrency.jar</jar-file> -->
		<class>com.example.jcurrencyapp.model.db.Currency</class>
		<class>com.example.jcurrencyapp.model.db.Country</class>
		<class>com.example.jcurrencyapp.model.db.Quotation</class>
		<properties>
			<!-- <property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />
			<property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/jcurrency" />
			<property name="hibernate.connection.username" value="postgres" />
			<property name="hibernate.connection.password" value="emar1" /> -->
			
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" /> <!-- DB Driver -->
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/jcurrency" /> <!-- BD Mane -->
            <property name="javax.persistence.jdbc.user" value="postgres" /> <!-- DB User -->
            <property name="javax.persistence.jdbc.password" value="emar1" /> <!-- DB Password -->
			
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.jdbc.batch_size" value="50" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="create" />
			<property name="hibernate.archive.autodetection" value ="class, hbm" />
			<property name="hibernate.generate_statistics" value="true" />
		</properties>
	</persistence-unit>
</persistence>